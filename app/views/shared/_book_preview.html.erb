<% replacement_text = '-' %>
<div class="card preview-card">
  <div class="card-header">
    <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
  </div>
  <div class="card-body">
    <p class="card-text">
      <b>By:</b> <%= (book.author != '' ? book.author : replacement_text) %><br>
      <b>Published By:</b> <%= (book.publisher != '' ? book.publisher : replacement_text) %><br>
      <b>Published In:</b> <%= (book.year != '' ? book.year : replacement_text) %><br>
      <b>ISBN:</b> <%= (book.isbn != '' ? book.isbn : replacement_text) %><br>
      <b>Other Scannable:</b> <%= (book.scannable != '' ? book.scannable : replacement_text) %><br>
      <b>Located on Shelf:</b> <%= (book.shelf != '' ? book.shelf : replacement_text) %><br>
    </p>
  </div>
</div>